@inject IViewLocalizer Localizer

<div class="row">
    @foreach (var group in Model.Groups)
    {
        <div class="col-md-2">
            <a class="btn btn-outline-success mt-1 btn-block btn-lg" href="/gn/@Localizer[group]">@Localizer[group]<i class="czi-arrow-right"></i></a>
        </div>
    }
</div>

